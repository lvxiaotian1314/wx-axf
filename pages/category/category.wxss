/* pages/category/category.wxss */
page{
  position: absolute;
  top:88rpx;
  background: #eee;
  bottom:0;
}
view{
  box-sizing: border-box;
}
/*闪送超市左侧商品分类  */
.category-left{
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  width:178rpx;
}
.category-left-categoryName{
  height:48px;
  line-height: 48px;
  text-align: center;
  font-size:28rpx;
  border-bottom:1px solid #e0e0e0;
  position: relative;
}
.category-left-categoryName.active:before{
  content:"";
  display: block;
  width:4px;
  height:46px;
  background:#ffd600;
  position: absolute;
  left:0;
  top:1px;
}
/*闪送超市右侧商品展示  */
.category-right{
  position:absolute;
  top:0;
  bottom:0;
  left:188rpx;
  right:0;
  background:#fff;
  overflow: hidden;
}
.category-right.active{
  overflow: scroll;
}
/*右侧大分类（全部分类、综合排序）  */
.category-right-products-title{
  justify-content: space-between;
  text-align: center;
  display: flex;
  height:48px;
  border-bottom:1px solid #eee;
  padding:10px 0;
  position: fixed;
  left:188rpx;
  right:0;
  z-index:999;
  background:#fff;
  top:90rpx!important;
}
.category-right-products-title>view{
  flex:1;
  line-height: 28px;
  font-size:26rpx;
}
.category-right-products-title>view::after{
  content:"";
  display: inline-block;
  width:15px;
  height:28px;
  margin-left:20rpx;
  background:url(https://s1.ax2x.com/2018/02/05/hoJOR.png) 0 center no-repeat;
  background-size:90%;
  vertical-align: top;
   transition: all .5s;
   transform: rotate(0deg);
}
.category-right-products-title>view.active::after{
  transform: rotate(180deg) !important;
}
.category-right-products-title>view:nth-of-type(1){
  border-right:1px solid #e0e0e0;
}
/*右侧小分类的具体内容*/
.category-right-products-categyContent{
  position:fixed;
  top:85px;
  left:188rpx;
  right:0;
  z-index: 999;
  background:#fff;
  padding-bottom:10px;
}
.category-right-products-categyContent>view{
  font-size:28rpx;
  float:left;
  padding:20rpx 24rpx;
  border:solid 1px #e0e0e0;
  margin-top:20rpx;
  margin-left:20rpx;
  border-radius: 16rpx;

}
.category-right-products-categyContent>view.active{
  border-color:#ffd600;
  background:#fff9d9;
}
/*商品展示列表  */
.category-right-products-productsList{
  position: absolute;
  top:50px;
}
/*商品展示详情列表图片  */
.productImg{
  width:96px;
  height:96px;
  float:left;
  background:url(https://s1.ax2x.com/2018/02/05/hohnY.png);
  background-size:100%;
}
/*商品展示的每个商品view*/
.category-right-products-productsList-product{
  height:110px;
  padding:14rpx 20rpx;
  border-bottom:1px solid #e0e0e0;
  position: relative;
  background:#fff;
}
.category-right-products-productsList-product>view{
  font-size:28rpx;
  text-indent: 20rpx;
}
/*商品容量  */
.category-right-products-productsList-product>view:nth-of-type(2){
  margin-top:24px;
  color:#999;
}
/*商品价格  */
.category-right-products-productsList-product>view:nth-of-type(3){
  color: #ff3800;
  margin-top:20rpx;
}
/*添加商品按钮*/
.addProduct{
  width:33px;
  height:33px;
  border:1px solid #ccc;
  border-radius: 50%;
  position: absolute;
  right:20rpx;
  bottom:20rpx;
  font-weight: bold;
  color:#ff3800;
  text-align: center;
  line-height: 30px;
  text-indent: 0!important;
  font-size:48rpx!important;
}
/*遮罩层*/
.cover{
 position:absolute;
 top:0;
 height:100%;
 overflow: hidden;
 background:rgba(0,0,0,0.3);
 z-index:99; 
 left:0;
 right:0;
}